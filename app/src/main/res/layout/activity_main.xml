<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    tools:context=".activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/start_from_beggin_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@android:dimen/app_icon_size"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:background="@drawable/act_main_button"
            android:tint="@color/primary"
            app:srcCompat="@drawable/baseline_play_arrow_black_48" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/act_main_button"
            android:tint="@color/primary"
            app:srcCompat="@drawable/baseline_settings_white_48" />

    </LinearLayout>

    <ListView
        android:id="@+id/listOfSongs"
        style="@android:style/Widget.Material.ListView.DropDown"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <Button
            android:id="@+id/toPlay"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@color/primary"
            android:gravity="left|center_vertical"
            android:text="@string/song_name"
            android:textColor="@color/icons"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary"
            android:tint="@color/icons"
            app:srcCompat="@drawable/baseline_play_arrow_black_36" />

        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/primary"
            android:tint="@color/icons"
            app:srcCompat="@drawable/baseline_skip_next_black_36" />
    </LinearLayout>


</LinearLayout>
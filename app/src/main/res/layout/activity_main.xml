<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="clip_horizontal"
    android:orientation="vertical"
    tools:context=".activity_main" >

    <TextView
        android:id="@+id/Project_Name"
        android:layout_width="104dp"
        android:layout_height="56dp"
        android:text="SP" />

    <Button
        android:id="@+id/toPlay"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_x="133dp"
        android:layout_y="8dp"
        android:text="Button" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="8dp"
        android:layout_y="78dp"
        android:gravity="center_horizontal"
        android:text="settings" />

    <ListView
        android:id="@+id/listOfSongs"
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_x="-5dp"
        android:layout_y="142dp" >

    </ListView>

    <LinearLayout
        android:id="@+id/QuickMenu"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_x="320dp"
        android:layout_y="200dp"
        android:background="#673AB7"
        android:orientation="vertical"
        tools:visibility="visible">

        <ImageButton
            android:id="@+id/QuickNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_skip_next_24" />

        <ImageButton
            android:id="@+id/QuickPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_play_arrow_24" />

        <ImageButton
            android:id="@+id/QuickPrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/baseline_skip_previous_24" />

        <ImageButton
            android:id="@+id/QuickOpen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_launcher_foreground" />

    </LinearLayout>

</AbsoluteLayout>
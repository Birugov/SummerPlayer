<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_play"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="131dp"
        android:layout_height="131dp"
        android:layout_x="139dp"
        android:layout_y="109dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="151dp"
        tools:layout_editor_absoluteY="83dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="226dp"
        android:layout_height="110dp"
        android:layout_weight="1"
        android:layout_x="87dp"
        android:layout_y="364dp" />

    <ImageButton
        android:id="@+id/leftImageButton"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_x="59dp"
        android:layout_y="507dp"
        app:srcCompat="@drawable/abc_vector_test" />

    <ImageButton
        android:id="@+id/playImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="169dp"
        android:layout_y="507dp"
        app:srcCompat="@android:drawable/alert_light_frame" />

    <ImageButton
        android:id="@+id/rightImageButton"
        android:layout_width="67dp"
        android:layout_height="70dp"
        android:layout_x="286dp"
        android:layout_y="512dp"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageButton
        android:id="@+id/settingImageButton"
        android:layout_width="84dp"
        android:layout_height="76dp"
        android:layout_x="324dp"
        android:layout_y="6dp"
        app:srcCompat="@android:drawable/btn_dialog" />

    <ImageButton
        android:id="@+id/mainImageButton"
        android:layout_width="80dp"
        android:layout_height="76dp"
        android:layout_x="219dp"
        android:layout_y="3dp"
        app:srcCompat="@android:drawable/gallery_thumb" />


</AbsoluteLayout>